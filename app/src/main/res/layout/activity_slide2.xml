<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20d2bb"
    tools:context="com.example.admin.miniproject.WelcomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/welcome2"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txtwelcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/slide2_title"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold"
            android:layout_above="@+id/txt1welcome2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp" />

        <TextView
            android:id="@+id/txt1welcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look for the art you like from various option add to wishlist"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/slide_desc"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/txt1welcome1"
            android:layout_alignStart="@+id/txt1welcome1"
            android:layout_marginBottom="39dp" />

        <ImageView
            android:id="@+id/imgwelcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/paint"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp" />

    </RelativeLayout>
</RelativeLayout>
